# даний код обчислює частки ринку 10 компаній за їхнім доходом та відомою ємністю ринка
companies <- c("Компанія УМ-11", "Компанія Глущенко", "Компанія Удовиченко", "Компанія Іващенко", 
               "Компанія 5", "Компанія 6", "Компанія 7", "Компанія 8", 
               "Компанія 9", "Компанія 10") 

revenues <- c(3.2, 2.8, 2.5, 2.0, 1.8, 1.5, 1.2, 1.0, 0.7, 0.5) # доходи компаній задано одразу у програмному коді

total_market <- 17 # зазначаєму відому заздалегідь ємність ринку

market_shares <- (revenues / total_market) * 100 # розраховуємо частку ринку за формулою та результат у відсотках

market_data <- data.frame(Компанія = companies, Частка = market_shares) # створюємо таблицю для виведення даних

#будуємо стовпчикову діаграму, де відображено рейтинг 10 компаній за часткою ринка, яку вони займають
barplot(
  market_data$Частка,
  names.arg = market_data$Компанія,
  col = rainbow(length(market_data$Частка)),
  main = "Рейтинг компаній за часткою ринку",
  xlab = "Компанії",
  ylab = "Частка ринку (%)",
  las = 2
)
# завдання було виконано кейс-командою Глущенко, Удовиченко, Іващенко
